@{
    ViewData["Title"] = "Criar contato";
}

<div class="text-center">
    <h1 class="display-4">Adicionar contato</h1>
</div>

<form>
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato">
    </div>
    <br />
    <div class="form-group">
        <label for="E-mail">E-mail</label>
        <input type="text" class="form-control" placeholder="Digite o e-mail do contato">
    </div>
    <br />
    <div class="form-group">
        <label for="Celular">Celular</label>
        <input type="text" class="form-control" placeholder="Digite o celular do contato">
    </div>
    <br />
    <button type="submit" class="btn btn-success d-block w-100">Adicionar</button>
    <a class="btn btn-secondary d-block w-100" asp-controller="Contato" asp-action="Index" role="button">
        Voltar
    </a>
</form>
